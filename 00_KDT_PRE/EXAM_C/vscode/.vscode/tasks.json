        "options": {
          "env": {
            "PATH": "C:\\msys64\\ucrt64\\bin;${env:PATH}"
          }
        },
        "group": { "kind": "build", "isDefault": true },
        "problemMatcher": "$gcc"
      }
    ]
  }  